class Solution {
public:
    bool isOneBitCharacter(vector<int>& bits) {
        int n = bits.size();
        bool ok = false;
        for(int i =0; i<n;)
        {
           if(bits[i] == 0) i++; 
           else i+=2;
           if(i == n-1) ok = true;
        }
        if(n == 1 && bits[0] == 0) return true;
        return ok;
    }
};
