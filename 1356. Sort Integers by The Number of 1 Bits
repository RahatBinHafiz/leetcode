class Solution {
public:
    vector<int> sortByBits(vector<int>& arr) {
        map<int,multiset<int>>mp;
        for(auto & i:arr)
        {
            int x = __builtin_popcount(i);
            mp[x].insert(i);
        }
        vector<int>ans;
        for(auto& i:mp)
        {
            for(auto& it:i.second)
            {
                ans.push_back(it);
            }
        }
        return ans;
    }
};
