class Solution {
public:
    int minDeletionSize(vector<string>& s) {
        int n = s[0].size();
        int ans = 0;
        int ind = 0;
        for(int i = 0; i<n; i++)
        {
            string a="";
           for(auto& x:s)
            {
            a+=x[ind];    
            }
            if(is_sorted(a.begin(),a.end())) ans++;
            ind++;
        }
        //cout << ans << endl;
        return n - ans;

    }
};
