class Solution {
public:
    bool ok (int x)
    {
        map<int,int>mp;
        while(x)
        {
            mp[x%10]++; x/=10;
        }
        for(auto i:mp)
        {
            if(i.first != i.second)
            {
                return false; 
            }
        }
            return true;
    }
    int nextBeautifulNumber(int n) {
        int ans = 0;
        for(int i = n+1; i<=1224444; i++)
        {
            if(ok(i)) {
                ans=i; break;
            } 
        }
        return ans;
    }
};
