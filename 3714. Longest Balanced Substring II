class Solution {
public:
    int longestBalanced(string s) {
        int n = s.length();
        int ans = 0;

        for (int i = 0; i < n;) {
            int j = i;
            while (j < n && s[j] == s[i]) j++;
            ans = max(ans, j - i);
            i = j;
        }

        char pairs[3][2] = {{'a', 'b'}, {'a', 'c'}, {'b', 'c'}};
        char forbid[3] = {'c', 'b', 'a'};

        for (int k = 0; k < 3; ++k) {
            char c1 = pairs[k][0];
            char c2 = pairs[k][1];
            char bad = forbid[k];

            unordered_map<int, int> mp;
            mp[0] = -1;
            int bal = 0;

            for (int i = 0; i < n; ++i) {
                if (s[i] == bad) {
                    mp.clear();
                    mp[0] = i;
                    bal = 0;
                } else {
                    if (s[i] == c1) bal++;
                    else bal--; 
                    
                    if (mp.count(bal)) ans = max(ans, i - mp[bal]);
                    else mp[bal] = i;
                }
            }
        }

        map<pair<int, int>, int> mp3;
        mp3[{0, 0}] = -1;
        int a = 0, b = 0, c = 0;

        for (int i = 0; i < n; ++i) {
            if (s[i] == 'a') a++;
            else if (s[i] == 'b') b++;
            else c++;

            pair<int, int> key = {a - b, b - c};
            if (mp3.count(key)) ans = max(ans, i - mp3[key]);
            else mp3[key] = i;
        }

        return ans;
    }
};
