class Solution {
public:
    int minPairSum(vector<int>& nums) {
        int n = nums.size();
        sort(nums.begin(), nums.end());
        int cnt  = n/2, ans = -1;
        int first = 0, last = n-1;
        while(cnt)
        {
           ans = max(ans, nums[first]+nums[last]);
           first++; last--;
           cnt--;
        }
        return ans;

    }
};
