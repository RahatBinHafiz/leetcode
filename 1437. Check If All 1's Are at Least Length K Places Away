class Solution {
public:
    bool kLengthApart(vector<int>& nums, int k) {
        int n = nums.size();
        int last = -1;
        bool ans = true;
        for(int i =0 ;i<n; i++)
        {
            if(nums[i] == 1)
            {
                if(last == -1)
                {
                    last = i;
                }
                else 
                {
                    if(i - last <= k){ ans = false; break;}
                    last = i;
                }
            }
        }
        return ans;
    }
};
