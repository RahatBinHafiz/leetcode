class Solution {
public:
    vector<int> countMentions(int num, vector<vector<string>>& events) {
        vector<int>mention(num,0);
        vector<int>online(num,0);
        
        sort(events.begin(), events.end(), [](const vector<string>&a, const vector<string>&b)
        {
           int x = stoi(a[1]);
           int y = stoi(b[1]);
           if(x == y)
           {
             return a[0] == "OFFLINE";
           }
           return x < y;
        });
        
        for(auto & event: events)
        {
            string type = event[0];
            int cur = stoi(event[1]);
            string details = event[2];

            if(type == "OFFLINE")
            {
                int id = stoi(details);
                online[id]=cur + 60;
            }
            else
            {
                if(details == "ALL")
                for(int i = 0; i<num; i++) {
                    mention[i]++;
                }
                else if(details == "HERE")
                {
                  for(int i = 0; i<num; i++) {
                    if(online[i] <= cur)
                    mention[i]++;
                }
                }
                else 
                {
                    stringstream ss(details);
                    string token;

                    while(ss >> token)
                    {
                        int id = stoi(token.substr(2));
                        mention[id]++;
                    }
                }
                
            }
        }
        return mention;
    }
};
