class Solution {
public:
    vector<int> findColumnWidth(vector<vector<int>>& grid) {
        vector<int>ans;
        int n= grid[0].size();
        int m= grid.size();
        //cout << n << " " << m << endl;
        
         for(int i = 0; i<n; i++)
         {
            int mx = 0;
            for(int j = 0; j<m; j++)
            {
                string s =to_string(grid[j][i]) ;
                mx = max(mx, (int)s.size());
            }
            ans.push_back(mx);
         }

        return ans; 
    }
};
