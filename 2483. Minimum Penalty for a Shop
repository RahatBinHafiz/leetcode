class Solution {
public:
    int bestClosingTime(string customers) {
        int ans = 1e9;
        int n = customers.size();
        vector<int>pre(n), suff(n);

        pre[0] = (customers[0] == 'N');
        suff[n-1] = (customers[n-1] == 'Y');
        for(int i = 1; i<n; i++)
        {
            int val = (customers[i] == 'N');
            pre[i] = pre[i-1]+val;
        }

        for(int i = n-2; i>=0; i--)
        {
             int val  = (customers[i] == 'Y');
             suff[i] = suff[i+1]+val;
        }
        //for(auto& i:pre) cout << i << " "; cout << endl;
        //for(auto& i:suff) cout << i << " "; cout << endl;

        int sum = 1e9;
        for(int i = 0; i<n; i++)
        {
           if(i == 0) 
           {
            sum = min(sum,suff[i]);
            ans = i;
           }
           else  
           {
            int intervalsum = pre[i-1] + suff[i];
            if(intervalsum < sum)
            {
                ans = i;
                sum = intervalsum;
            }
           }
          // cout << ans << " " << sum << endl;
        }
        if(pre[n-1] < sum)
        {
            ans = n;
        }

        //cout << pre[0] <<endl;
        
        return ans;
    }
};
