class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {
        int n = nums.size();
         sort(nums.begin(), nums.end());
        int ans = 0;
        int prev = INT_MIN;
        for(auto i:nums)
        {
            int curr = min(max(prev+1, i - k), i+k);
            if(curr > prev)
            {
                ans++;
                prev = curr;
            }
        }
   return ans;
    }
};
