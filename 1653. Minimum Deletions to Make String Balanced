class Solution {
public:
    int minimumDeletions(string s) {
        int n = s.size();
        set<char>st; for(auto i:s) st.insert(i); if(st.size() == 1) return 0;
        vector<int>pre(n), suff(n);
        for(int i = 0; i<n; i++)
        {
            if(s[i] == 'b') pre[i] = 1;
            if(s[i] == 'a') suff[i] = 1;
        }
        for(int i= 1; i<n; i++)
        {
            pre[i]+=pre[i-1];
        }
        for(int i = n-2; i>=0; i--)
        {
            suff[i]+=suff[i+1];
        }
        int ans = 1e9;
        for(int i = 0; i<n; i++)
        {
            ans = min(pre[i]+suff[i], ans);
           // cout << pre[i] << " " << suff[i] << endl;
        }
        return ans-1;
    }
};
