class Solution {
public:
    int countUnguarded(int m, int n, vector<vector<int>>& guards, vector<vector<int>>& walls) {
        int ans = 0;
        vector<vector<char>>v(m, vector<char>(n));
        for(int i = 0; i<guards.size(); i++)
        {
           v[guards[i][0]][guards[i][1]] = 'g';
        
        }
        for(int i = 0; i<walls.size(); i++)
        {
           v[walls[i][0]][walls[i][1]] = 'w';
        }
        ans += guards.size(); 
        ans+= walls.size();
        for(int i =0; i<m; i++)
        {          
                   bool ok = false;
                   for(int a = 0; a<n; a++)
                   {
                    if(v[i][a] == 'w' ) ok = false;
                    else if(v[i][a] == 'g') { ok = true; }
                    else if (v[i][a] == 'x') continue;
                    else if(ok) v[i][a] = 'x', ans++;
                   }
                   ok = false;
                   for(int a = n-1; a>=0; a--)
                   {
                    if(v[i][a] == 'w' ) ok = false;
                    else if(v[i][a] == 'g') { ok = true; }
                    else if (v[i][a] == 'x') continue;
                    else if(ok) v[i][a] = 'x', ans++;
                   }
        }

        for(int j = 0; j<n; j++)
        {
                bool ok = false;
                for(int a = 0; a<m; a++)
                   {
                    if(v[a][j] == 'w') ok = false;
                    else if(v[a][j] == 'g') ok = true;
                    else if(v[a][j] == 'x') continue;
                    else if(ok) v[a][j] = 'x', ans++;
                   }
                   for(int a = m-1; a>=0; a--)
                   {
                    if(v[a][j] == 'w') ok = false;
                    else if(v[a][j] == 'g') ok = true;
                    else if(v[a][j] == 'x') continue;
                    else if(ok) v[a][j] = 'x', ans++;
                   }
        }

        for(int i = 0; i<m; i++)
        {
            for(int j = 0; j<n; j++)
            cout << v[i][j] <<" ";
            cout << endl;
        }
       cout << ans << endl;
        return m*n - ans;
    }
};
