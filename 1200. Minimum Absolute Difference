class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        int n = arr.size();
        map<int, vector<vector<int>>> list;

        sort(arr.begin(), arr.end());
        for(int i = 0; i<n-1; i++)
        {
            list[arr[i+1] - arr[i]].push_back({arr[i], arr[i+1]});
        }
        return list.begin()->second;

    }
};
