class Solution {
public:
    long long getDescentPeriods(vector<int>& prices) {
        int n = prices.size();
        long len = 1;
        int cnt = 1;
        for(int i=0;i<n-1; i++)
        {
            if(prices[i] == prices[i+1] +1)
            {
                cnt++;
            }
            else{
               // len = max(len,cnt);
                cnt = 1;
            }
            len+=cnt;
        }
        return len;
    }
};
