class Solution {
public:
    int countCollisions(string s) {
        int ans = 0;
        int n = s.size();
        int l = -1, r = -1;
         for(int i =0; i<n; i++)
        {
           if(s[i] != 'L')  {
            l  = i; break;
           }
        }
        if(l == -1) l=n;
        for(int i = n-1; i>=0; i--)
        {
            if(s[i]!='R'){
                r = i; break;
            }
        }
        
        for(int i = l; i<= r ;i++)
        {
            if(s[i]=='L' || s[i] == 'R') ans++;
        }
        return ans;
    }
};
