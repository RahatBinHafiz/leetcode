class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int n = digits.size();
        //vector<int>ans = digits;
        int x = n;
        if(digits[n-1] == 9)
        {
        while(x>0 && digits[x-1] == 9)
        {
            digits[x-1] =0;
            x--;
        }
            if(x==0)
            digits[x] = 1,
            digits.push_back(0);
            else {
                digits[x-1]++;
            }
        }
        else 
        {
            digits[n-1]++;
        }
        return digits;
    }
};
