class Solution {
public:
    int minimumDifference(vector<int>& nums, int k) {
        if( k== 1 ) return 0;
        int n = nums.size();
        sort(nums.rbegin(), nums.rend());
        int ans = 1e9;
        for(int i = 0; i<= n-k; i++)
        {
            ans = min(ans, nums[i] - nums[i+k-1]);
            //cout << ans << endl;
        }
        return ans;
    }
};
