class Solution {
public:
    int countValidSelections(vector<int>& nums) {
        int n  = nums.size();
        vector<int>a(n);
        vector<int>b(n);
        a[0] = nums[0];
        for(int i= 1 ; i<n; i++)
        {
           a[i] = a[i-1]+nums[i];
        }
         b[n-1] = nums[n-1];
        for(int i= n-2 ; i>=0; i--)
        {
           b[i]=  nums[i]+b[i+1];
        }
        for(int i = 0; i <n; i++)
        {
            cout << a[i] <<  " " << b[i] << endl;
        }
        int ans = 0;
        for(int i = 0; i<n; i++)
        {
            if(nums[i] == 0 && a[i] == b[i])
            {
               ans+=2;
            }
            else if(nums[i] == 0 && abs(a[i] - b[i])==1) ans+=1;
        }
        return ans;
    }
};
