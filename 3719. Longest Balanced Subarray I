class Solution {
public:
    int longestBalanced(vector<int>& nums) {
        int n = nums.size();
        int ans = 0;
        for(int i = 0; i<n ; i++)
        {
            unordered_set<int>seen;
            int odd_count = 0;
            int even_count = 0;
            for(int j = i; j<n ; j++)
            {
                if(seen.insert(nums[j]).second)
                {
                    if(nums[j] &1) odd_count++;
                    else even_count++;
                }
                if(odd_count == even_count)
                {
                    ans = max(ans, j - i+1);
                }
            }
        }
        return ans;
    }
};
