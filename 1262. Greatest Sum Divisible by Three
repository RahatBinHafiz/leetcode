class Solution {
public:
    #define ll long long int
    int maxSumDivThree(vector<int>& nums) {
        int n  = nums.size();
        vector<ll>v[3];
        for(auto & i:nums)
        {
            v[i%3].push_back(i);
        }
        sort(v[1].begin(), v[1].end());
        sort(v[2].begin(), v[2].end());
        
        ll ans= accumulate(nums.begin(),nums.end(), 0ll);

        ll minus = 1e18;
        if(ans%3 == 0) {
            minus = 0;
        }
        else if(ans%3 == 1)
        {
            if(v[1].size() >= 1)
            {
                minus = min(minus, v[1][0]);
            }
            if(v[2].size() >=2) 
            {
                minus = min(minus, v[2][0]+v[2][1]);
            }
        }
        else if(ans%3 == 2)
        {
            if(v[2].size() >= 1)
            {
                minus = min(minus, v[2][0]);
            }
            if(v[1].size() >=2) 
            {
                minus = min(minus, v[1][0]+v[1][1]);
            }
        }
        return ans - minus;
    }
};
