class Solution {
public:
    int intersectionSizeTwo(vector<vector<int>>& arr) {
        int n = arr.size();
        sort(arr.begin(),arr.end(), [](const vector<int>&a, const vector<int>&b){
            if(a[1] == b[1]) return a[0] > b[0];
            return a[1] < b[1];
        });
        int ans = 2;

        int last = arr[0][1];
        int secondLast = last - 1;

        for (int i = 1; i < n; i++) {
            int L = arr[i][0];
            int R = arr[i][1];

            if (secondLast >= L) continue;

            bool needTwo = (L > last);
            ans += needTwo ? 2 : 1;

            if (needTwo) {
                secondLast = R - 1;
                last = R;
            } else {
                secondLast = last;
                last = R;
            }
        }

        return ans;
    }
};
