class Solution {
public:
    bool isTrionic(vector<int>& nums) {
        int n = nums.size();
        int f = 1, s = 1, t= 1;
        int i = 0;
        while(i<n-1 && nums[i] < nums[i+1])
        {
            f++;
            i++;
        }
         while(i<n-1 && nums[i] > nums[i+1])
        {
            s++;
            i++;
        }
         while(i<n-1 && nums[i] < nums[i+1])
        {
            t++;
            i++;
        }
        if(f>1&&s>1&&t>1 && f+s+t-2 == n) return true;
        else return false;
    }
};
